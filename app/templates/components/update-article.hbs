{{#if updateArticleForm}}
  <h4>Update {{article.owner}}'s {{article.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=article.image}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=article.title}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=article.author}}
        </div>

        <div class="form-group">
          <label for="tagline">Tagline</label>
          {{input value=tagline id="tagline" placeholder=article.tagline}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=article.content}}
        </div>

        <button {{action 'update' article}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateArticleForm'}}>Update</button>
{{/if}}
