{{#if addNewArticle}}
<h1>New Article</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="tagline">Tagline</label>
          {{input value=tagline id="tagline"}}
        </div>

        <div class="form-group">
          <label for="Content">Image URL</label>
          {{input value=Content id="Content"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
